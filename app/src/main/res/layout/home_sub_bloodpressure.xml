<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/layout_titlebar"
        layout="@layout/layout_titlebar" />
    <ImageView
        android:id="@+id/center"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:src="@drawable/img_02_tizhong2x" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_02_tizhong2x"
        android:id="@+id/imageView2" />

    <ImageView
        android:id="@+id/iamge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_bp2x" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/center"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_02_tizhong2x"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="33sp"
        android:layout_below="@+id/iamge"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:id="@+id/tv_xinlv" />
    <TextView
        android:text="次/分钟"
        android:textSize="33sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xinlv"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />
    <TextView
        android:text="收缩压"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toLeftOf="@+id/iamge"
        android:layout_toStartOf="@+id/iamge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:text="0.0"
        android:textSize="33sp"
        android:id="@+id/tv_diya"
        android:layout_above="@+id/textView11"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />
    <TextView
        android:text="毫米汞柱"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />
    <TextView
        android:text="舒张压"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"

        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/iamge"
        android:layout_toEndOf="@+id/iamge" />
    <TextView
        android:text="0.0"
        android:textSize="33sp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gaoya"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />
    <TextView
        android:text="毫米汞柱"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gaoya"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView11" />
</RelativeLayout>