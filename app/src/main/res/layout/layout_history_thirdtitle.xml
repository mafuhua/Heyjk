    <ImageView
        android:id="@+id/icon_history_title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/icon_bp_n2x" />

    <ImageView
        android:id="@+id/icon_history_title5"
        android:layout_width="0dp"
